<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ocean">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/d15"
                android:layout_above="@+id/next_btn"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:id="@+id/pick_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/d15"
                    android:padding="@dimen/d15"
                    android:background="@drawable/border_round_light_gray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:id="@+id/spinnerProvider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_round_light_gray"
                    android:padding="@dimen/d15">
                    <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                        android:id="@+id/jenis_nomor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor Pelanggan"
                        android:layout_above="@+id/no"
                        android:textAllCaps="true"
                        android:textColor="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:inputType="number"
                            android:textSize="@dimen/d14"
                            android:hint="123456789"
                            android:id="@+id/no"
                            />
                        <ImageView
                            android:layout_width="@dimen/d25"
                            android:layout_height="@dimen/d25"
                            android:visibility="visible"
                            android:id="@+id/icon_purchase"
                            android:src="@drawable/ic_user_add"/>
                    </LinearLayout>
                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pick_service"
                    android:layout_marginTop="@dimen/d15"
                    android:padding="@dimen/d15"
                    android:background="@drawable/border_round_light_gray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/price_purchase"
                            android:textSize="@dimen/s18"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/d10"
                            android:text="Rp 49.000"/>
                        <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/info_purchase"
                            android:layout_below="@id/price_purchase"
                            android:textSize="@dimen/d14"
                            android:text="Pilih Nominal"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_keyboard_arrow_down_24"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </LinearLayout>
                </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pick_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d15"
                android:visibility="gone"
                android:padding="@dimen/d15"
                android:background="@drawable/border_round_light_gray">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/spinnerProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        />
                </LinearLayout>
            </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_amount"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/d15"
                    android:background="@drawable/border_round_light_gray"
                    android:padding="@dimen/d15">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:inputType="number"
                        android:textSize="@dimen/d14"
                        android:hint="Masukkan Jumlah Pembayaran anda"
                        android:id="@+id/amount_purchase"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/next_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_selada"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:text="PROSES"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_list_service"
            android:visibility="gone"
            android:background="@color/white">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/purchase_list"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>