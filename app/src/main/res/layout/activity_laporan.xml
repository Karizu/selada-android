<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/very_light_pink"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/btnLaporanPenjualan"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/Black"
                android:paddingTop="@dimen/d8"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:text="Laporan Penjualan"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d6"/>

    <android.support.v7.widget.CardView
        android:id="@+id/btnHistoryTransaksi"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/Black"
                android:paddingTop="@dimen/d8"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:text="Histori Transaksi"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d6"/>

    <android.support.v7.widget.CardView
        android:id="@+id/btnSettlement"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/Black"
                android:paddingTop="@dimen/d8"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:text="Settlement"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btnLaporanStock"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d16">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/Black"
                android:paddingTop="@dimen/d8"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:text="LAPORAN STOCK BARANG"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>