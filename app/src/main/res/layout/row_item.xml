<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bottom"
    android:orientation="vertical">
    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/item_row_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"><!-- Bottom View Start-->
        <FrameLayout
            android:id="@+id/user_feed_row_bottom"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/red_alert"
            android:visibility="gone"
            android:weightSum="1">
            <!--What you want to show-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_trash" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Hapus" />
            </LinearLayout>
        </FrameLayout>
    </com.daimajia.swipe.SwipeLayout>

    <LinearLayout
        android:id="@+id/container_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="113dp"
            android:layout_height="123dp"
            android:id="@+id/item_image"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/resto_default"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/d8"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="70dp"
                    android:layout_gravity="top"
                    android:layout_marginBottom="@dimen/d4"
                    android:orientation="vertical">
                    <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray.primary_dark"
                        android:maxLines="2"
                        android:textSize="@dimen/d16"
                        android:id="@+id/item_name"
                        android:text="-"/>
                    <com.boardinglabs.mireta.selada.component.fontview.RobotoLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_desc"
                        android:textColor="@color/gray.primary_dark"
                        android:textSize="11dip"
                        android:maxLines="2"
                        android:text="-"/>
                    <com.boardinglabs.mireta.selada.component.fontview.RobotoLightTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/item_stok"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/d4"
                        android:textColor="@color/red_alert"
                        android:textSize="11dip"
                        android:text="-"/>
                </LinearLayout>
                <ImageButton
                    android:layout_width="@dimen/d25"
                    android:layout_height="@dimen/d25"
                    android:layout_marginLeft="@dimen/d8"
                    android:background="@drawable/border_round_red"
                    android:id="@+id/delete_button"
                    android:src="@drawable/close"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d6"
                android:orientation="horizontal"
                android:layout_gravity="bottom">
                <com.boardinglabs.mireta.selada.component.fontview.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/almost_black"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:id="@+id/item_price"
                    android:text="Rp. 0"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"/>
                <FrameLayout
                    android:layout_width="116dip"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/add_minus_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="@dimen/d25"
                            android:layout_height="@dimen/d25"
                            android:background="@drawable/border_round_gradient"
                            android:src="@drawable/min"
                            android:id="@+id/minus_button"/>
                        <EditText
                            android:layout_marginLeft="@dimen/d8"
                            android:id="@+id/qty_input"
                            android:layout_width="@dimen/d45"
                            android:layout_height="@dimen/d25"
                            android:background="@drawable/border_round_white"
                            android:hint="0"
                            android:inputType="number"
                            android:textAllCaps="false"
                            android:enabled="false"
                            android:textAlignment="center"
                            android:textSize="@dimen/s16" />

                        <ImageButton
                            android:layout_width="@dimen/d25"
                            android:layout_height="@dimen/d25"
                            android:layout_marginLeft="@dimen/d8"
                            android:background="@drawable/border_round_gradient"
                            android:src="@drawable/fab_add"
                            android:id="@+id/add_button"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/add_button_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right">

                        <Button
                            android:id="@+id/normal_add_button"
                            android:layout_width="@dimen/d70"
                            android:layout_height="@dimen/d25"
                            android:background="@drawable/border_round_gradient"
                            android:src="@drawable/fab_add"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Tambah"
                            android:layout_gravity="right"/>

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
        <!-- Surface View End -->
    </LinearLayout>
</LinearLayout>