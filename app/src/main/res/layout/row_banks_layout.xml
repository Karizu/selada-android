<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d10"
    android:id="@+id/container_banks_list"
    android:background="@drawable/border_round_light_gray"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:padding="@dimen/d8"
        >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:id="@+id/bank_icon"
                android:src="@drawable/pampasy_logo"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/d8">
                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bank_name"
                    android:text="Nama Bank"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s16"
                    android:layout_gravity="center"
                    />
                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bank_account"
                    android:text="Nomor Rekening"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s12"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/selectedIcon"
                android:layout_width="@dimen/d20"
                android:layout_height="@dimen/d20"
                android:src="@drawable/ic_check"
                android:layout_marginRight="@dimen/d12"/>
    </LinearLayout>
</LinearLayout>