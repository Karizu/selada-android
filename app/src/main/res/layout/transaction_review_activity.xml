<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/toolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <include layout="@layout/toolbar"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarLayout"
            android:layout_above="@id/next_btn">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/d15"
                android:layout_marginLeft="@dimen/d15"
                android:layout_marginRight="@dimen/d15"
                android:layout_marginBottom="@dimen/d15"
                >
                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/border_round_white"
                    android:padding="@dimen/d15">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <com.boardinglabs.mireta.selada.component.fontview.RobotoBoldTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Informasi Transaksi"
                                android:textColor="@color/black"
                                android:id="@+id/transaction_info"/>
                            <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/s13"
                                android:text="Tambahan Informasi"
                                android:id="@+id/transaction_info_more"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d40"
                            android:gravity="right"
                            android:layout_weight="5">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/icon_transaction"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s10"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/d10"
                        android:id="@+id/order_id_title"
                        android:text="Order ID"/>
                    <com.boardinglabs.mireta.selada.component.fontview.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/s14"
                        android:text="123456789"
                        android:id="@+id/order_id_text"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/d15"
                        android:src="@drawable/divider_dashed"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:background="@drawable/border_round_white"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/d15"
                        android:hint="Kode Referral"
                        android:id="@+id/refferal_code"
                        android:textAlignment="center"
                        android:inputType="text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/s14"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d5"
                        android:layout_marginTop="0dp"
                        android:text="Detail Pembayaran"
                        android:textSize="@dimen/s12"
                        android:textColor="@color/black"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/d10">
                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:id="@+id/transaction"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Transaction"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/transaction_amount"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/d10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Denda"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/d10">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="Biaya Layanan"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/fee"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="@dimen/d10"
                        android:background="@color/starDust_opacity_40"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="@dimen/d5"
                        android:paddingHorizontal="@dimen/d15"
                        android:background="@drawable/border_round_blue_gradient">
                        <ImageView
                            android:layout_width="@dimen/d32"
                            android:layout_height="@dimen/d32"
                            android:src="@drawable/dollar"/>
                        <com.boardinglabs.mireta.selada.component.fontview.RobotoBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/s15"
                            android:layout_marginLeft="@dimen/d5"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:text="TOTAL"/>
                        <com.boardinglabs.mireta.selada.component.fontview.RobotoBoldTextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/s15"
                            android:text="Rp. 0"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/total_transaction"
                            android:gravity="right"/>
                    </LinearLayout>
                </LinearLayout>
                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="METODE BAYAR"
                    android:layout_marginTop="@dimen/d15"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d15"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/bjb_btn"
                        android:background="@drawable/border_round_white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d5"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/d15"
                            android:layout_marginRight="@dimen/d15"
                            >
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:layout_gravity="center"
                                android:src="@drawable/logo_bjb"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                >
                                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/s15"
                                    android:textColor="@color/black"
                                    android:text="Kartu Bank BJB"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="@dimen/d18"
                                android:layout_height="@dimen/d18"
                                android:layout_gravity="center"
                                android:visibility="gone"
                                android:src="@drawable/ic_check"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:id="@+id/topup_btn"
                        android:background="@drawable/border_round_white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d5"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/d15"
                            android:layout_marginRight="@dimen/d15"
                            >
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:layout_gravity="center"
                                android:id="@+id/transaction_icon"
                                android:src="@drawable/logo_ardi_trans_b"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center"
                                android:orientation="vertical"
                                >
                                <com.boardinglabs.mireta.selada.component.fontview.RobotoBoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/s15"
                                    android:text="Rp.0"
                                    android:textColor="@color/black"
                                    android:id="@+id/balance"/>

                                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                                    android:id="@+id/saldo_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SALDO DEPOSIT ARDI"
                                    android:textSize="@dimen/s13" />
                            </LinearLayout>
                            <ImageView
                                android:layout_width="@dimen/d18"
                                android:layout_height="@dimen/d18"
                                android:layout_gravity="center"
                                android:id="@+id/iconCheck"
                                android:visibility="gone"
                                android:src="@drawable/ic_check"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/cc_btn"
                        android:background="@drawable/border_round_white"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/d10">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:layout_marginBottom="@dimen/d5"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/d15"
                            android:layout_marginRight="@dimen/d15"
                            >
                            <ImageView
                                android:layout_width="@dimen/d40"
                                android:layout_height="@dimen/d40"
                                android:id="@+id/cc_image"
                                android:layout_gravity="center"
                                android:src="@drawable/img_visa_master"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical"
                                >
                                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/s15"
                                    android:textColor="@color/black"
                                    android:id="@+id/CC_text"
                                    android:text="Credit Card"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="@dimen/d18"
                                android:layout_height="@dimen/d18"
                                android:layout_gravity="center"
                                android:id="@+id/iconCheckCC"
                                android:visibility="gone"
                                android:src="@drawable/ic_check"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/error_balance"
                    android:textAlignment="center"
                    android:text="Saldo anda tidak cukup, Silahkan top up"
                    android:textColor="@color/red"
                    android:layout_marginTop="@dimen/d10"/>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button_selada"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:text="BAYAR"/>

    </RelativeLayout>

</LinearLayout>