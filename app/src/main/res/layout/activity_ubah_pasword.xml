<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modul.akun.ubahpassword.UbahPaswordActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d40"
        android:background="@drawable/background_gradient_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/pullToRefresh"
        android:orientation="horizontal"
        android:padding="@dimen/d8">

        <com.boardinglabs.mireta.selada.component.fontview.RobotoRegularTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:maxLines="2"
            android:textSize="@dimen/d16"
            android:id="@+id/item_name"
            android:text="Ubah Password"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"/>
        <ImageView
            android:layout_width="@dimen/s20"
            android:layout_height="@dimen/d20"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/d32"
        android:paddingEnd="@dimen/d32"
        android:paddingTop="@dimen/d16"
        android:paddingBottom="@dimen/d16">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/etPasswordLama"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:hint="Password Lama"
            android:inputType="textPassword"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="13sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/etPasswordBaru"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:hint="Password Baru"
            android:inputType="textPassword"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/etUlangiPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:background="@drawable/border_round_white"
            android:hint="Ulangi Password"
            android:inputType="textPassword"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d15"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/btnUbahPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:textSize="13sp"
            android:background="@drawable/border_round_gradient"
            android:text="SIMPAN"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>