<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/very_light_pink"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/d8"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnPengaturanAkun"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        android:layout_marginTop="4dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Black"
                                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                    android:text="Pengaturan Akun"
                                    tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d6"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnProfilToko"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Black"
                                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                    android:text="Profil Toko"
                                    tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d6"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnKategori"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Black"
                                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                    android:text="Kategori"
                                    tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d6"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnKatalog"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Black"
                                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                    android:text="Katalog"
                                    tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d6"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnTambahBarang"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="@dimen/d4"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/Black"
                                    android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                    android:text="Tambah Barang"
                                    tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d6"/>

                    <android.support.v7.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/btnTestRFID"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="@dimen/d4"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                android:text="Test RFID"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/d6"/>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnVoidArdi"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d60"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="@dimen/d4"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/Black"
                                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                                android:text="Void Ardi"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </ScrollView>

        <LinearLayout
            android:id="@+id/btnKeluar"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient"
            android:padding="@dimen/d16"
            android:weightSum="2"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:text="KELUAR"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_24px_white"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>