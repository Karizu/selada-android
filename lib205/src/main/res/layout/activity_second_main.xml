<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ListView
        android:id="@+id/widget39"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/widget33" />

    <TextView
        android:id="@+id/widget47"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_above="@+id/widget46"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/widget39"
        android:layout_toRightOf="@+id/widget45"
        android:scrollbars="vertical"
        android:maxLines="100" 
        android:singleLine="false"/>

    <Button
        android:id="@+id/widget46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="EXIT"
         />
    
    <RadioButton
        android:id="@+id/widget33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/widget39"
        android:checked="true"
        android:enabled="false"
        android:text="Connection" />

    <Button
        android:id="@+id/widget45"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget47"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@+id/widget39"
        android:text="RETURN" />

</RelativeLayout>